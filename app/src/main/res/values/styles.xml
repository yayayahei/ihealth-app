<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.button" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="AppTheme.button.dangerous" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#F44336</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
</resources>
